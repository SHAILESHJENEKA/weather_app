<body>



<header>

<h1> WEATHER CONDITION </h1>



<hr id="hr">

<div id="data"></div>

<script language="JavaScript">

	function processForm()
	  {
	  	var parameter = location.search.substring(1).split("&");
	  	var temp =  parameter[0].split("=");
	  	l = unescape(temp[1]);
	  	document.getElementById("data").innerHTML = l; 
	  }
	  processForm();

</script>

